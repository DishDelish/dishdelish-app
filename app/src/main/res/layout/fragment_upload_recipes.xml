<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/uploadRecipePageTitle"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/recipeName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:drawableStart="@drawable/cookie_edit"
            android:drawablePadding="5dp"
            android:gravity="start"
            android:hint="@string/uploadRecipePageRecipeName"
            android:inputType="text"
            android:textColorHint="#8e9094"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/prepTime"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:drawableStart="@drawable/cookie_clock"
            android:drawablePadding="5dp"
            android:gravity="start"
            android:hint="@string/prepTime"
            android:inputType="numberDecimal"
            android:textColorHint="#8e9094"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/cookTime"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:drawableStart="@drawable/cookie_clock"
            android:drawablePadding="5dp"
            android:gravity="start"
            android:hint="@string/cookTime"
            android:inputType="numberDecimal"
            android:textColorHint="#8e9094"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/servings"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="260dp"
            android:drawableStart="@drawable/pencil"
            android:drawablePadding="5dp"
            android:gravity="start"
            android:hint="@string/servings"
            android:inputType="numberDecimal"
            android:textColorHint="#8e9094"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/utensils"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="310dp"
            android:drawableStart="@drawable/silverware_fork_knife"
            android:drawablePadding="5dp"
            android:gravity="start"
            android:hint="@string/utensils"
            android:inputType="text"
            android:textColorHint="#8e9094"
            android:textCursorDrawable="@null" />

        <Button
            android:id="@+id/chooseImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="370dp"
            android:text="@string/uploadRecipePageChooseImg" />

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="430dp" />

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="600dp"
            android:gravity="center"
            android:text="@string/uploadRecipePageButtonText"
            app:layout_constraintEnd_toEndOf="parent" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>