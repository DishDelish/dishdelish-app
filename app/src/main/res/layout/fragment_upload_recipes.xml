<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/uploadRecipeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="@string/uploadRecipePageTitle"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/recipeName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uploadRecipeTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/cookie_edit"
                android:drawablePadding="5dp"
                android:gravity="start"
                android:hint="@string/uploadRecipePageRecipeName"
                android:inputType="text"
                android:textColorHint="#8e9094"
                android:textCursorDrawable="@null" />

            <EditText
                android:id="@+id/prepTime"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipeName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/cookie_clock"
                android:drawablePadding="5dp"
                android:gravity="start"
                android:hint="@string/prepTime"
                android:inputType="numberDecimal"
                android:textColorHint="#8e9094"
                android:textCursorDrawable="@null" />

            <EditText
                android:id="@+id/cookTime"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prepTime"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/cookie_clock"
                android:drawablePadding="5dp"
                android:gravity="start"
                android:hint="@string/cookTime"
                android:inputType="numberDecimal"
                android:textColorHint="#8e9094"
                android:textCursorDrawable="@null" />

            <EditText
                android:id="@+id/servings"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cookTime"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/pencil"
                android:drawablePadding="5dp"
                android:gravity="start"
                android:hint="@string/servings"
                android:inputType="numberDecimal"
                android:textColorHint="#8e9094"
                android:textCursorDrawable="@null" />

            <EditText
                android:id="@+id/utensils"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/servings"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/silverware_fork_knife"
                android:drawablePadding="5dp"
                android:gravity="start"
                android:hint="@string/utensils"
                android:inputType="text"
                android:textColorHint="#8e9094"
                android:textCursorDrawable="@null" />

            <LinearLayout
                android:id="@+id/ingredientsGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/utensils"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/ingredientsAmount"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/fruit_citrus"
                    android:drawablePadding="5dp"
                    android:gravity="start"
                    android:hint="@string/ingredientsAmount"
                    android:inputType="number"
                    android:textColorHint="#8e9094"
                    android:textCursorDrawable="@null" />
                <EditText
                    android:id="@+id/ingredientsUnit"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="start"
                    android:hint="@string/ingredientsUnit"
                    android:inputType="text"
                    android:textColorHint="#8e9094"
                    android:textCursorDrawable="@null" />
                <EditText
                    android:id="@+id/ingredientsName"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="start"
                    android:hint="@string/ingredientsName"
                    android:inputType="text"
                    android:textColorHint="#8e9094"
                    android:textCursorDrawable="@null" />

                <ImageView
                    android:id="@+id/addIngredient"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/plus"/>

            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:theme="@style/Theme.SDPBootcamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingredientsGroup"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:id="@+id/stepGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/chipGroup"
                android:layout_centerHorizontal="true">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/step"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/chef_hat"
                        android:drawablePadding="5dp"
                        android:gravity="start"
                        android:hint="@string/step"
                        android:inputType="text"
                        android:textColorHint="#8e9094"
                        android:textCursorDrawable="@null" />

                    <ImageView
                        android:id="@+id/addStep"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/plus"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

            <Button
                android:id="@+id/chooseImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stepGroup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/uploadRecipePageChooseImg" />

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/chooseImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/panorama_variant" />

            <Button
                android:id="@+id/uploadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/uploadRecipePageButtonText"
                app:layout_constraintEnd_toEndOf="parent" />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>