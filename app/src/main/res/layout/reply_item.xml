<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/comment_box">


    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins"
        android:text="User"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/replyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userName"
        android:layout_alignStart="@+id/userName"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppins"
        android:text="This is a reply"
        android:textColor="@color/black" />

    <ToggleButton
        android:id="@+id/thumbButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_thumb_empty"
        android:layout_below="@id/replyText"
        android:layout_alignStart="@+id/userName"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textOn=""
        android:textOff=""
        />

    <TextView
        android:id="@+id/likeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/thumbButton"
        android:layout_alignBaseline="@id/thumbButton"
        android:layout_marginStart="5dp"
        android:text="5"
        android:textColor="#333333"
        android:fontFamily="@font/poppins"/>



</RelativeLayout>